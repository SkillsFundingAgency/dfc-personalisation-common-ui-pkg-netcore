@using DFC.Personalisation.CommonUI.ViewComponents.Components.PhaseBanner
@model DFC.Personalisation.CommonUI.ViewComponents.Components.PhaseBanner.PhaseBannerModel

<div @if (!string.IsNullOrWhiteSpace(Model.Id))
     {
         <text>id="@Model.Id"</text>
     } class="govuk-phase-banner" role="region" aria-labelledby="PhaseBannerExplanation">
    <p class="govuk-phase-banner__content">
        <strong class="govuk-tag govuk-phase-banner__content__tag">
            @if (IPhaseBanner.ProjectPhase.Alpha == Model.Phase)
            {
                <text>alpha</text>
            }
            else if (IPhaseBanner.ProjectPhase.Beta == Model.Phase)
            {
                <text>beta</text>
            }
        </strong>
        @if (!string.IsNullOrWhiteSpace(Model.FeedbackHref))
        {
            <span id="PhaseBannerExplanation" class="govuk-phase-banner__text">
                This is a new service – your <a class="govuk-link" href="@Model.FeedbackHref">feedback</a> will help us to improve it.
            </span>
        }
    </p>
</div>